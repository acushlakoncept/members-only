<div class="container">
  <div class="row mt-3">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h3>Recent Posts 
        <%= create_post_btn %>
        </h3>
        <% @posts.each do |post|%>
            <div class="card my-3">
            <div class="card-header">
                <strong><%= post.title %></strong> 
                <%= show_author_name(post) %>
            </div>
            <div class="card-body">
                <p class="card-text"><%= post.body %></p>
            </div>
        
            </div>
        <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

